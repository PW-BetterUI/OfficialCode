<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PWTestApp1___ProposalMockup.Views.ItemDetailPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#1A1A1A}"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Star Message" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout Spacing="20" Padding="15">
        <!--<Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>-->

        <Label x:Name="AnnouncementTitle" FontAttributes="Bold" TextTransform="Uppercase" FontSize="24" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
        <Label x:Name="TargetAudience" TextTransform="Uppercase" TextColor="LightGray"/>
        <Label x:Name="AnnouncementContent" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
    </StackLayout>
    
</ContentPage>