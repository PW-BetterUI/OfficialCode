<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PWTestApp1___ProposalMockup.Views.Results"
             Title="Results"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#1A1A1A}">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="stackLayout" Spacing="0" Padding="10,0,10,0">
                <Picker x:Name="ResultsPicker" Margin="5, 10, 0, 0" Title="Pick a Result..." TitleColor="Gray" TextColor="{AppThemeBinding Light=Black, Dark=White}" SelectedIndexChanged="OnPickerSelectedIndexChanged" />
            </StackLayout>
            <StackLayout x:Name="ResultsStackLayout" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>